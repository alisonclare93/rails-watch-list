<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @list.photo.key %>)">
  <h1> <%= @list.name %> </h1>
</div>


<% @list.movies.each do |movie| %>
  <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>

  <div class="card-product">
    <img src= <%= movie.poster_url %>  alt="">
    <div class="card-product-infos">
      <h2> <%= movie.title %> <%= "⭐" * movie.rating %> </h2>
      <p> <%= movie.overview %> </p>
      <p>
        <%= bookmark.comment %> <%= link_to 'Delete Bookmark', bookmark_path(bookmark), method: :delete, data: { confirm: 'Do you really want to?' } %>
      </p>
    </div>
  </div>

<% end %>


<%= link_to 'New bookmark', new_list_bookmark_path(@list), class: "btn btn-ghost" %>

<%= link_to 'Back', lists_path %>
